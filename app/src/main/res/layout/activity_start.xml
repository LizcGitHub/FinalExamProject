<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王者荣耀"
        android:id="@+id/id_btn_wangzherongyao"
        android:layout_marginEnd="12dp"
        android:layout_above="@+id/id_btn_baiduxinwen"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ空间"
        android:id="@+id/id_btn_qq_kongjian"
        android:layout_below="@+id/id_btn_goto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="101dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度地图"
        android:id="@+id/id_btn_baiduditu"
        android:layout_below="@+id/id_btn_qq_kongjian"
        android:layout_toEndOf="@+id/id_btn_goto"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOTO_下载页面"
        android:id="@+id/id_btn_goto"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/id_btn_qq_kongjian" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新浪微博"
        android:id="@+id/id_btn_xinlangweibo"
        android:layout_below="@+id/id_btn_baiduditu"
        android:layout_alignStart="@+id/id_btn_qq_kongjian"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度新闻"
        android:id="@+id/id_btn_baiduxinwen"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/id_btn_xinlangweibo"
        android:layout_alignStart="@+id/id_btn_baiduditu"
        android:layout_marginStart="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_btn_taobao"
        android:text="淘宝"
        android:layout_above="@+id/id_btn_baiduditu"
        android:layout_alignEnd="@+id/id_btn_wangzherongyao"
        android:layout_marginEnd="20dp" />
    <Button
        android:id="@+id/id_btn_clear_all"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="删除数据库所有数据"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>